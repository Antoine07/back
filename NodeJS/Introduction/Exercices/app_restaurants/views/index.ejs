<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/css/styles.css" />
    <link rel="stylesheet" type="text/css" href="/node_modules/bootstrap/dist/css/bootstrap.min.css" />

    <title>Charles Baudelaire</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md">
                <form method="post">
                    <div>
                        Quartier :
                        <input type="text" name="borough" />
                    </div>
                    <div>
                        Cuisine :
                        <select name="cuisine">
                        <% cuisines.forEach( (name) => { %>
                            <option type="text" value="<%= name %>" ><%= name %></option>
                        <% }) ;%>
                        </select>
                    </div>
                    <div >
                        <input class="btn btn-warning" type="submit" name="Search" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>