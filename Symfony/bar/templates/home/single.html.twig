{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-sm-12">
			<div class="card">
				<div class="card-body">
					<h5 class="card-title">
						{{ beer.name }}
					</h5>
					{% if beer.publishedAt  %}
						<p>Date de cr√©ation :
							{{ beer.publishedAt | date('d-m-Y h:m:s') }}
						</p>
					{% endif %}
					<p>
						{% if beer.price   %}
							Price:
							{{ beer.price }}
							&euro;
						{% endif %}
						Degree:
						{{ beer.degree ?? 'no degree' }}</p>
					<div>
						{{ beer.description ?? 'no description' }}
					</div>
					<div>
						<img src="{{ asset('build/images/beer_00.jpeg') }}"/>
					</div>
					{% include 'partials/meta.html.twig' with {'beer' : beer }%}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
